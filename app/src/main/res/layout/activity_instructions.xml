<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:ads="http://schemas.android.com/apk/res-auto"
android:id="@+id/instructions_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:weightSum="6"
android:background="#000000"
tools:context=".InstructionsActivity">

<TextView
    android:id="@+id/instructions_title"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.7"
    android:gravity="center"
    android:inputType="none"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textColor="#ffffff"
    android:textStyle="bold"
    android:text="Instructions"/>
<TextView
    android:id="@+id/instructions_detail"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="4.5"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:inputType="none"
    android:textColor="#ffffff"
    android:text=" \nGuess and answer the picture before you get hanged.\n\nThere are 7 chances to guess the picture.\nEach wrong guess will lead you close to get hanged.\n\nThere are various pictures like animals, fruits, flags, logos, buildings etc.\nThe pictures may be of 1 word or multiple words.\n\nComplete puzzles by pressing available letters under each picture.\n\nThere are 2 hints which you can use.\n\nOnce you guess the name correclty you can get more information on that picture by clicking 'LEARN' button.\n\nSolve all puzzels and enjoy !"/>

<com.google.android.gms.ads.AdView
    android:id="@+id/instructionsAdView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    ads:adSize="SMART_BANNER"
    ads:adUnitId="@string/admob_banner_id"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true">
</com.google.android.gms.ads.AdView>
</LinearLayout>